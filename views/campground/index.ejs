<% layout('/layouts/boilerplate') %>

<div id="cluster-map"></div>

<h2>Campgrounds</h2>

<% for(let camp of camps){ %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%= camp.images.length > 0? camp.images[0].path : '' %>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %></h5>
                    <p class="card-text"><%= camp.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= camp.location %></small>
                    </p>
                    <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">View <%= camp.title %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>

<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
    const coordinates = {features: <%- JSON.stringify(camps) %>}
</script>

<script src="/js/clusterMap.js"></script>